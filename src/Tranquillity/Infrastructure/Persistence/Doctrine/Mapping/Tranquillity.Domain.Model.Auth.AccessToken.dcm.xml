<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" 
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Tranquillity\Domain\Model\Auth\AccessToken" repository-class="Tranquillity\Infrastructure\Domain\Model\Auth\Doctrine\DoctrineAccessTokenRepository" table="auth_tokens_access">
        <id name="id" column="id" type="AccessTokenId"/>
        <field name="token" type="string" nullable="false" />
        <field name="clientId" type="ClientId" nullable="false" />
        <field name="userId" type="UserId" nullable="true" />
        <field name="expires" type="datetime" nullable="false" />
        <field name="scope" type="datetime" nullable="true" />
    </entity>
</doctrine-mapping>